
@{
    ViewData["Title"] = "Лист с потребители";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Лист с потребители</h1>
            </div>
        </div>
    </div>
</div>

<div class="user-list">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Email</th>
                <th scope="col">Потребителско име</th>
                <th scope="col">Първо име</th>
                <th scope="col">Фамилно име</th>
                <th scope="col">Роля</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Email</td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Role</td>
                    <td>
                        <a class="btn-danger btn" asp-area="Admin" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@item.Id"> Изтрий</a>
                        <a class="btn-success btn" asp-area="Admin" asp-controller="Admin" asp-action="EditUser" asp-route-id="@item.Id"> Редактирай</a>
                        @if (item?.Role == "Office")
                        {
                        }
                        else
                        {
                            <a class="btn-warning btn" asp-area="Admin" asp-controller="Admin" asp-action="SetUserAsOffice" asp-route-id="@item.Id"> Направи потребител Office</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>