@model Cargo.Data.Models.Order

@{
    ViewData["Title"] = "Добави поръчка";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Добави поръчка</h1>
            </div>
        </div>
    </div>
</div>

<div class="add-row">
    <div class="col-md-4">
        <form asp-action="AddOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label">Клиент</label>
                <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label">Дата на поръчване</label>
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityId" class="control-label">Град</label>
                <select asp-for="CityId" class ="form-control" asp-items="ViewBag.CityId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OfficeId" class="control-label">Офис</label>
                <select asp-for="OfficeId" class ="form-control" asp-items="ViewBag.OfficeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AutomobileId" class="control-label">Автомобилен номер</label>
                <select asp-for="AutomobileId" class ="form-control" asp-items="ViewBag.AutomobileId">km</select>
            </div>
            <div class="form-group">
                <label asp-for="TotalCost" class="control-label">Обща цена</label>
                <input asp-for="TotalCost" class="form-control" />
                <span asp-validation-for="TotalCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledKilometers" class="control-label">Изминати километри</label>
                <input asp-for="TravelledKilometers" class="form-control" />
                <span asp-validation-for="TravelledKilometers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="AdminPanel" style="margin-left:10px;">Върни се в менюто</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
