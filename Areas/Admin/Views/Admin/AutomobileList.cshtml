@model IEnumerable<Cargo.Data.Models.Automobile>

@{
    ViewData["Title"] = "Лист с автомобили";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Лист с автомобили</h1>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="AddAutomobile" class="btn btn-primary" style="margin-top:20px; margin-left:20px;">Добави нов автомобил</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                    <a asp-area="Admin" asp-action="AutomobileList" asp-controller="Admin" asp-route-sortOrder="@ViewData["NameSortParam"]">Име на модела</a>
                </th>
                <th>
                    <a asp-area="Admin" asp-action="AutomobileList" asp-controller="Admin" asp-route-sortOrder="@ViewData["OfficeSortParam"]">Офис</a>
                </th>
                <th>
                    <a asp-area="Admin" asp-action="AutomobileList" asp-controller="Admin" asp-route-sortOrder="@ViewData["KmSortParam"]">Километраж</a>
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AutomobileModel.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Office.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speedometer)
                </td>
                <td>
                    <a asp-action="EditAutomobile" asp-route-id="@item.Id" class="btn btn-success">Редактирай</a> |
                    <a asp-action="DeleteAutomobile" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
