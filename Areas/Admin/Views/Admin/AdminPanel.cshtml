@{
    ViewData["Title"] = "Опции на ръководителя";
}
<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Опции на админа</h1>
            </div>
        </div>
    </div>
</div>

<div class="adminPanel">

    <div class="adminOperations">
            <a asp-area="Admin" asp-controller="Admin" asp-action="AddClient" class="adminBtn btn">Добави клиент</a>
            <a asp-area="Admin" asp-controller="Admin" asp-action="ClientList" class="adminBtn btn">Лист с клиенти</a>
    </div>

    <div class="adminOperations">
            <a asp-area="Admin" asp-controller="Admin" asp-action="AddCity" class="adminBtn btn">Добави град</a>
            <a asp-area="Admin" asp-controller="Admin" asp-action="CityList" class="adminBtn btn">Лист с градове</a>
    </div>

    <div class="adminOperations">
            <a asp-area="Admin" asp-controller="Admin" asp-action="AddOffice" class="adminBtn btn">Добави офис</a>
            <a asp-area="Admin" asp-controller="Admin" asp-action="OfficeList" class="adminBtn btn">Лист с офиси</a>
    </div>

    <div class="adminOperations">
            <a asp-area="Admin" asp-controller="Admin" asp-action="AddAutomobileModel" class="adminBtn btn">Добави модел</a>
            <a asp-area="Admin" asp-controller="Admin" asp-action="AutomobileModelList" class="adminBtn btn">Лист с модели</a>
    </div>

    <div class="adminOperations">
            <a asp-area="Admin" asp-controller="Admin" asp-action="AddAutomobile" class="adminBtn btn">Добави автомобил</a>
            <a asp-area="Admin" asp-controller="Admin" asp-action="AutomobileList" class="adminBtn btn">Лист с автомобили</a>
    </div>

    <div class="adminOperations">
            <a asp-area="Admin" asp-controller="Admin" asp-action="AddOrder" class="adminBtn btn">Добави поръчка</a>
            <a asp-area="Admin" asp-controller="Admin" asp-action="OrderList" class="adminBtn btn">Лист с поръчки</a>
    </div>

    <div class="adminOperations">
            <a asp-area="Admin" asp-controller="Admin" asp-action="UserList" class="adminBtn btn">Лист с потребители</a>
    </div>
</div>
