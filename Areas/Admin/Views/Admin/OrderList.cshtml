@model IEnumerable<Cargo.Data.Models.Order>

@{
    ViewData["Title"] = "Лист с поръчки";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Лист с поръчки</h1>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="AddOrder" class="btn btn-primary" style="margin-left:20px; margin-top:20px;">Добави нова поръчка</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-area="Admin" asp-action="OrderList" asp-controller="Admin" asp-route-sortOrder="@ViewData["ClientSortParam"]">Клиент</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="OrderList" asp-controller="Admin" asp-route-sortOrder="@ViewData["DateSortParam"]">Дата на поръчване</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="OrderList" asp-controller="Admin" asp-route-sortOrder="@ViewData["CitySortParam"]">Град</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="OrderList" asp-controller="Admin" asp-route-sortOrder="@ViewData["OfficeSortParam"]">Офис</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="OrderList" asp-controller="Admin" asp-route-sortOrder="@ViewData["AutomobileSortParam"]">Автомобил</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="OrderList" asp-controller="Admin" asp-route-sortOrder="@ViewData["TotalSortParam"]">Обща сума</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="OrderList" asp-controller="Admin" asp-route-sortOrder="@ViewData["KmSortParam"]">Изминати километри</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.FirstName) @Html.DisplayFor(modelItem => item.Client.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Office.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Automobile.AutomobileModel.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TravelledKilometers)
            </td>
            <td>
                <a asp-action="EditOrder" asp-route-id="@item.Id" class="btn btn-success">Редактирай</a> |
                <a asp-action="DeleteOrder" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>
            </td>
        </tr>
}
    </tbody>
</table>
