@model IEnumerable<Cargo.Data.Models.Office>

@{
    ViewData["Title"] = "Лист с офиси";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Лист с офиси</h1>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="AddOffice" class="btn btn-primary" style="margin-left:20px; margin-top:20px">Добави нов офис</a>
</p>

<table class="table" style="margin-left:25%; width:60%">
    <thead>
        <tr>
            <th>
                <a asp-area="Admin" asp-action="OfficeList" asp-controller="Admin" asp-route-sortOrder="@ViewData["NameSortParam"]">Име</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="OfficeList" asp-controller="Admin" asp-route-sortOrder="@ViewData["CitySortParam"]">Град</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                <a asp-action="EditOffice" asp-route-id="@item.Id" class="btn btn-success">Редактирай</a> |
                <a asp-action="DeleteOffice" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>
            </td>
        </tr>
}
    </tbody>
</table>
