@model IEnumerable<Cargo.Data.Models.AutomobileModel>

@{
    ViewData["Title"] = "Лист с модели автомобили";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Лист с модели автомобили</h1>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="AddAutomobileModel" class="btn btn-primary" style="margin-top:20px; margin-left:20px;">Добави нов модел автомобил</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-area="Admin" asp-action="AutomobileModelList" asp-controller="Admin" asp-route-sortOrder="@ViewData["ManufacturerSortParam"]">Производител</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="AutomobileModelList" asp-controller="Admin" asp-route-sortOrder="@ViewData["NameSortParam"]">Име на модела</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="AutomobileModelList" asp-controller="Admin" asp-route-sortOrder="@ViewData["YearSortParam"]">Дата на създаване</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="AutomobileModelList" asp-controller="Admin" asp-route-sortOrder="@ViewData["LoadSortParam"]">Максимална товаримост</a>
            </th>
            <th>
                <a asp-area="Admin" asp-action="AutomobileModelList" asp-controller="Admin" asp-route-sortOrder="@ViewData["ConsumptionSortParam"]">Разход на гориво</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxLoad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FuelConsumption)
            </td>
            <td>
                <a asp-action="EditAutomobileModel" asp-route-id="@item.Id" class="btn btn-success">Редактирай</a> |
                <a asp-action="DeleteAutomobileModel" asp-route-id="@item.Id" class="btn btn-danger">Изтрий</a>
            </td>
        </tr>
}
    </tbody>
</table>
