@model Cargo.Data.Models.Automobile

@{
    ViewData["Title"] = "Редактирай автомобил";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Редактирай автомобил</h1>
            </div>
        </div>
    </div>
</div>

<div class="add-row">
    <div class="col-md-4">
        <form asp-action="EditAutomobile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AutomobileModelId" class="control-label">Модел</label>
                <select asp-for="AutomobileModelId" class="form-control" asp-items="ViewBag.AutomobileModelId"></select>
                <span asp-validation-for="AutomobileModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficeId" class="control-label">Офис</label>
                <select asp-for="OfficeId" class="form-control" asp-items="ViewBag.OfficeId"></select>
                <span asp-validation-for="OfficeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Speedometer" class="control-label">Километраж</label>
                <input asp-for="Speedometer" class="form-control" placeholder="@Model.Speedometer"/>
                <span asp-validation-for="Speedometer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запази" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="AutomobileList" style="margin-left:10px;">Върни се в менюто</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
