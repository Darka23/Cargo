@model IEnumerable<Cargo.Data.Models.Order>

@{
    ViewData["Title"] = "OrderList";
}

<div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/../images/hero_bg_1.jpg)" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center">

            <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
                <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Лист с поръчки</h1>
            </div>
        </div>
    </div>
</div>

@if (Model.Count() == 0)
{
    <h1 class="add-row" style="margin-bottom:100px;">Все още няма поръчки</h1>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-area="Ofis" asp-action="OrderList" asp-controller="Ofis" asp-route-sortOrder="@ViewData["ClientSortParam"]">Клиент</a>
                </th>
                <th>
                    <a asp-area="Ofis" asp-action="OrderList" asp-controller="Ofis" asp-route-sortOrder="@ViewData["DateSortParam"]">Дата на поръчване</a>
                </th>
                <th>
                    <a asp-area="Ofis" asp-action="OrderList" asp-controller="Ofis" asp-route-sortOrder="@ViewData["CitySortParam"]">Град</a>
                </th>
                <th>
                    <a asp-area="Ofis" asp-action="OrderList" asp-controller="Ofis" asp-route-sortOrder="@ViewData["OfficeSortParam"]">Офис</a>
                </th>
                <th>
                    <a asp-area="Ofis" asp-action="OrderList" asp-controller="Ofis" asp-route-sortOrder="@ViewData["AutomobileSortParam"]">Автомобил</a>
                </th>
                <th>
                    <a asp-area="Ofis" asp-action="OrderList" asp-controller="Ofis" asp-route-sortOrder="@ViewData["TotalSortParam"]">Обща сума</a>
                </th>
                <th>
                    <a asp-area="Ofis" asp-action="OrderList" asp-controller="Ofis" asp-route-sortOrder="@ViewData["KmSortParam"]">Изминати километри</a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.FirstName) @Html.DisplayFor(modelItem => item.Client.LastName) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Office.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Automobile.AutomobileModel.ModelName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TotalCost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TravelledKilometers)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
